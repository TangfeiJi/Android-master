<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@drawable/activity_splash</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/toolbar_button</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/card_view_bg</item>
        <item name="android:textColor">@color/item_title</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="popupTheme">@style/ToolbarPopupTheme</item>
        <item name="theme">@style/ToolBarTheme</item>
    </style>
    <style name="textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColor">@color/character_and_title</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Design.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/design_tab_text_size</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>


    <!--111111111-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>



    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bt_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/view_padding</item>
        <item name="android:layout_marginRight">@dimen/view_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bt_selector_state</item>
    </style>
    <!-- 分享对话框样式 start -->
    <style name="dialog_content_share_ll">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>
    <style name="dialog_content_share_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dip</item>
        <item name="android:textColor">@color/hint</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>
    <!-- 首页按钮3种状态都可点击显示样式 -->
    <style name="button_click">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bt_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/view_padding</item>
        <item name="android:layout_marginRight">@dimen/view_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bt_selector_click_state</item>
    </style>


    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColor">@color/character_and_title</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppLoginTheme.Salmon" parent="Theme.AccountKit">
        <item name="com_accountkit_primary_text_color">@color/character_and_title</item><!--UI 元素的主要颜色-->
        <item name="com_accountkit_secondary_color">@color/emphasize</item><!--输入框的背景颜色-->
        <item name="com_accountkit_secondary_text_color">@color/character_and_title</item><!--设置输入框文本和法律文本的颜色-->
        <item name="com_accountkit_background_color">@color/background</item><!--UI 的背景颜色（如果未使用背景图片）-->
        <item name="com_accountkit_button_background_color">@color/bt_normal</item><!--设置“Next”（下一步）和“Continue”（继续）按钮的背景颜色-->
        <item name="com_accountkit_button_border_color">@color/bt_normal</item><!--设置“Next”（下一步）和“Continue”（继续）按钮的边框颜色-->
        <item name="com_accountkit_button_disabled_background_color">@color/bt_unabled</item><!--round_color“Next”（下一步）和“Continue”（继续）按钮无效时的背景颜色-->
        <item name="com_accountkit_button_disabled_border_color">@color/bt_unabled</item><!--r_color“Next”（下一步）和“Continue”（继续）按钮无效时的边框颜色-->
        <item name="com_accountkit_button_disabled_text_color">@color/character_and_title</item><!--olor“Next”（下一步）和“Continue”（继续）按钮无效时的文本颜色-->
        <item name="com_accountkit_button_pressed_background_color">@color/bt_pressed</item><!--按钮处于按下状态时的背景颜色-->
        <item name="com_accountkit_button_pressed_border_color">@color/bt_pressed</item><!--按钮处于按下状态时的边框颜色-->
        <item name="com_accountkit_button_pressed_text_color">@color/background</item><!--按钮处于按下状态时的文本颜色-->
        <item name="com_accountkit_button_text_color">@color/background</item><!--默认状态下按钮文本的颜色-->
        <item name="com_accountkit_input_accent_color">@color/background</item><!--输入选择工具的颜色，例如选择国家/地区代码的下拉菜单-->
        <item name="com_accountkit_input_background_color">@color/background</item><!--输入框的背景颜色。覆盖 com_accountkit_secondary_color-->
        <item name="com_accountkit_input_border_color">@color/split_line</item><!--输入框的边框颜色-->
        <item name="com_accountkit_input_text_color">@color/character_and_title</item><!--输入框的边框颜色-->

        <!--<item name="com_accountkit_status_bar_color">@android:color/black</item>&lt;!&ndash;文本的主要颜色&ndash;&gt;-->

    </style>


    <style name="MyStyleFullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
